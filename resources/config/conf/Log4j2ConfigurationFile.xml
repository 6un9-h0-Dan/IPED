<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="IPED-%d{yyyy-MM-dd HH:mm:ss}\t[%level]\t%msg%n" />
            <PackageRegexpFilter regex=".*org\.icepdf.*" onMatch="DENY" onMismatch="ACCEPT"/>
        </Console>
        <File name="LogFile" fileName="${sys:logFileNamePath}" immediateFlush="true" append="true" bufferSize="4096">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss}\t[%level]\t%msg%n" />
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" level="error"/>
            <AppenderRef ref="LogFile" />
        </Root>
    </Loggers>
</Configuration>