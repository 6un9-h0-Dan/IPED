                    </execution>                                        
                    <execution>
                        <id>unpack-jre</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>java</groupId>
                                    <artifactId>jre</artifactId>
                                    <version>1.8.0_152</version>
                                    <type>zip</type>
                                    <overWrite>false</overWrite>
