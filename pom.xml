                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.sleuthkit</groupId>
                                    <artifactId>tsk-loaddb</artifactId>
                                    <version>4.6.0-p1.1</version>
